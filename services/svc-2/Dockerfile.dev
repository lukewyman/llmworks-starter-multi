FROM python:3.12-slim

ENV UV_SYSTEM_PYTHON=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN pip install --no-cache-dir uv

WORKDIR /app
COPY pyproject.toml /app/          
COPY src /app/src

# editable install with dev extras (tests, mypy, ruff)
RUN uv pip install -e .[dev]

EXPOSE 8080
CMD ["uv", "run", "uvicorn", "svc_2.main:app", "--host", "0.0.0.0", "--port", "8080"]
